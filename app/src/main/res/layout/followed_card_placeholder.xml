<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="50dp"
    android:id="@+id/followed_card_placeholder">
    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/mFollowedPic"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:background="#929494"
            android:src="@drawable/placeholder_grey"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center|center"
            android:src="@drawable/ic_friends"
            android:id="@+id/heart"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/followed_hint_below"
            android:allowUndo="true"
            android:text="Name"
            android:shadowColor="#000000"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="7dp"
            android:layout_gravity="bottom|center"
            android:background="#00FFFFFF" />
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/followed_hint_right"
        android:text="Follow some people"
        android:allowUndo="true"
        android:layout_gravity="center_vertical"
        android:paddingLeft="8dp"
        android:shadowColor="#000000"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="7dp"
        android:background="#00FFFFFF" />

</LinearLayout>