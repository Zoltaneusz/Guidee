<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:id="@+id/likers_card_placeholder">
    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/likers_frame">
        <ImageView
            android:id="@+id/likers_cover_mLoved"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#929494"
            android:src="@drawable/placeholder2"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/likers_title_right"
        android:text="Nickname"
        android:maxLines="1"
        android:allowUndo="true"
        android:fontFamily="sans-serif-medium"
        android:layout_toRightOf="@+id/likers_frame"
        android:gravity="top"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:shadowColor="#000000"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#00FFFFFF" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-regular"
        android:id="@+id/likers_summary_right"
        android:text="FIrstName LastName"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/likers_frame"
        android:allowUndo="true"
        android:paddingRight="16dp"
        android:layout_below="@+id/likers_title_right"
        android:paddingLeft="8dp"
        android:shadowColor="#000000"
        android:textColor="#000000"
        android:textSize="12sp"
        android:background="#00FFFFFF" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textOff="Follow"
        android:textOn="Unfollow"
        android:paddingRight="16dp"
        android:id="@+id/likers_imageView" />

</RelativeLayout>