<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:id="@+id/mCarouselVideoCard">

    <com.google.android.youtube.player.YouTubeThumbnailView
        android:id="@+id/mCarouselThumbnail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#929494"
        android:src="@drawable/ic_media_play"/>
    <FrameLayout
        android:id="@+id/mCarouselVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/mCarouselThumbnail"
        android:layout_alignStart="@+id/mCarouselThumbnail"
        android:layout_alignRight="@+id/mCarouselThumbnail"
        android:layout_alignEnd="@+id/mCarouselThumbnail"
        android:visibility="visible"/>
    </FrameLayout>
