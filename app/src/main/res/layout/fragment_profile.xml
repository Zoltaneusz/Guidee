<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <ImageView
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/pic_background"
        android:src="@drawable/profile_pic"
        android:id="@+id/prof_pic"  />

    <TextView
        android:text="Zollie"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/profile_name"
        android:layout_marginStart="23dp"
        android:layout_alignTop="@+id/prof_pic"
        android:layout_toEndOf="@+id/prof_pic"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/all_journeys_title"
        android:text="All journeys"
        android:textColor="#000000"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/prof_pic"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"/>

    <HorizontalScrollView
        android:id="@+id/all_journeys_content"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/all_journeys_title"
        android:paddingTop="5dp"
        android:paddingLeft="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_pic"/>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/profile_journey_title"
        android:text="Journey to Bizsomfalva"
        android:textColor="#000000"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_above="@+id/profile_journey_content"/>

    <TextView
        android:id="@+id/profile_journey_content"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="This journey took place in this january. Bla bla blaaaaaa Fuszenecker Zsombor is an idiot."
        android:layout_above="@+id/profile_moments_title"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/profile_moments_title"
        android:textColor="#000000"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Moments"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_above="@+id/horizontal_scroll"/>

    <HorizontalScrollView
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom"
        android:background="#90D499"
        android:id="@+id/horizontal_scroll"
        android:layout_alignParentBottom="true"
        android:clipChildren="false"
        android:paddingLeft="10dp"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/scroll_layout"
            android:clipChildren="false"
            android:weightSum="1">

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>