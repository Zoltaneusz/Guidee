<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/frameLayout">
        <ImageView
            android:id="@+id/imgFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/maxresdefault"
            android:alpha="0.5" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center">

                    <android.support.v7.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:elevation="30dp"
                        android:id="@+id/prof_pic_frame"
                        app:cardCornerRadius="20dp"
                        android:layout_centerHorizontal="true"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:thicknessRatio="1.9">
                        <ImageView
                            android:layout_height="80dp"
                            android:layout_width="80dp"
                            android:id="@+id/prof_pic"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true">
                        </ImageView>
                    </android.support.v7.widget.CardView>

                        <TextView
                            android:text="Zollie"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/profile_name"
                            android:layout_below="@+id/prof_pic_frame"
                            android:layout_marginTop="15dp"
                            android:textSize="25dp"
                            android:textColor="#000000"/>
                </RelativeLayout>
    </FrameLayout>



    <TextView
        android:id="@+id/all_journeys_title"
        android:text="All journeys"
        android:textColor="#000000"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/frameLayout"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"/>

    <HorizontalScrollView
        android:id="@+id/all_journeys_content"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/all_journeys_title"
        android:paddingTop="5dp"
        android:paddingLeft="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_pic"/>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/profile_journey_title"
        android:text="Journey to Bizsomfalva"
        android:textColor="#000000"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_above="@+id/profile_journey_content"/>

    <TextView
        android:id="@+id/profile_journey_content"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="This journey took place in this january. Bla bla blaaaaaa Fuszenecker Zsombor is an idiot."
        android:layout_above="@+id/profile_moments_title"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/profile_moments_title"
        android:textColor="#000000"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Moments"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_above="@+id/horizontal_scroll"/>

    <HorizontalScrollView
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom"
        android:background="#90D499"
        android:id="@+id/horizontal_scroll"
        android:layout_alignParentBottom="true"
        android:clipChildren="false"
        android:paddingLeft="10dp"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/scroll_layout"
            android:clipChildren="false"
            android:weightSum="1">

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>