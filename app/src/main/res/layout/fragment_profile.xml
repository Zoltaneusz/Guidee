<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary100">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:background="@color/colorPrimary100">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/frameLayout">
        <ImageView
            android:id="@+id/imgFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/maxresdefault"
            android:alpha="0.5" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center">
                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/prof_pic"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">
                        </ImageView>

                        <TextView
                            android:text=""
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/profile_name"
                            android:layout_below="@+id/prof_pic"
                            android:layout_marginTop="15dp"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:layout_centerHorizontal="true"/>
                </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/my_journeys_title"
        android:text="My Journeys âœˆ"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/frameLayout"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/profile_j_edit_FAB"
        android:src="@drawable/ic_edit_black_36dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:backgroundTint="@color/lightGreen"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_journeys_recycle"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_below="@+id/my_journeys_title"
        android:scrollbars="none"
        android:paddingStart="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_journeys_recycle_placeholder"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_below="@+id/my_journeys_title">
    </LinearLayout>

    <EditText
        android:id="@+id/my_plans_title"
        android:text="My Plans "
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/my_journeys_recycle"
        android:background="@android:color/transparent"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plan_journeys_recycle"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_below="@+id/my_plans_title"
        android:scrollbars="none"
        android:paddingStart="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plan_journeys_recycle_placeholder"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_below="@+id/my_plans_title">
    </LinearLayout>

    <EditText
        android:id="@+id/my_favorites_title"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="My "
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/plan_journeys_recycle"
        android:background="@android:color/transparent"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/following_journeys_recycle"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_below="@+id/my_favorites_title"
        android:scrollbars="none"
        android:paddingStart="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/following_journeys_recycle_placeholder"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_below="@+id/my_favorites_title">

    </LinearLayout>

</RelativeLayout>
</ScrollView>